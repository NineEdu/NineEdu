# NineEdu Root Environment Variables
# For Docker Compose local development
# Copy this file to .env and fill in your actual values

# Backend Environment Variables
MONGO_URI=mongodb+srv://user:password@cluster.mongodb.net/nineedu?retryWrites=true&w=majority
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
GEMINI_API_KEY=your-google-genai-api-key
GROQ_API_KEY=your-groq-api-key
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project",...}

# Frontend Environment Variables
NEXT_PUBLIC_GATEWAY_URL=https://your-gateway.mypinata.cloud
PINATA_JWT=your-pinata-jwt-token
